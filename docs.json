{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "BetterGrowth Support",
  "colors": {
    "primary": "#00AE4F",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Bắt đầu ở đây",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "FAQ",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Cộng đồng",
          "href": "https://bettergrowth.org/community/",
          "icon": "user-group"
        },
        {
          "anchor": "Blog",
          "href": "https://bettergrowth.org/blog/",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Hỗ trợ",
        "href": "https://m.me/bettergrowthofficial"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Nâng cấp lên Pro",
      "href": "https://bettergrowth.org/pro/"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "facebook": "https://www.facebook.com/bettergrowthofficial",
      "linkedin": "https://www.linkedin.com/company/bettergrowthofficial",
      "threads": "https://www.threads.com/bettergrowthofficial"
    }
  }
}
